
 {{#each children}}
                
                <li id="mylist">
                    {{#equal this.type 'directory'}}
                        <span class="caret">
                            {{this.name}}
                        </span>
                    {{/equal}}
                    {{#equal this.type 'file'}}
                    <div class="row">

                        <div class="col-md-12 bg-warning border rounded p-2 m-1 filediv" >
                            <span >
                                <small>{{this.name}}</small>
                            </span>
                                <!-- Call route to show all videos in this category-->
                            <form action="/courses/play" method="post" >
                                <input type="hidden" name="path" value="{{this.path}}">
                                <input type="hidden" name="filename" value="{{this.name}}">
                                <button class="btn btn-primary "> 
                                    Play Video
                                </button>
                            </form>
